include '../nanoislands.yate'

match / {
    nb-button({
        "content": "Button"
        "id": "button"
    })

    nb-button({
        "content": "Disbaled button"
        "disabled": true()
        "id": "button-disabled"
    })

    nb-checkbox({
        "attrs": {
            "value": "my-value"
        }
        "checked": true()
        "content": "Button"
        "id": "checkbox-checked"
    })

    nb-checkbox({
        "attrs": {
            "value": "my-value"
        }
        "disabled": true()
        "content": "Button"
        "id": "checkbox-disabled"
    })

    nb-checkbox({
        "text-id": 'uniq-str'
        "id": "checkbox-with-html-label"
    })

     nb-checkbox({
            "attrs": {
                "value": "my-value"
            }
            "content": "Button"
            "id": "checkbox"
        })

    nb-select({
        "disabled": true()
        "id": "select-disabled"
        "items": []
    })

    nb-select( {
      'size': 'm'
      'id': 'select'
      'attrs': {
        'name': 'myname'
      }
      'class': 'my-test-class'
      'items': [
          {
              'text': 'Карта'
              'value': 'option1'
          }
          {
              'text': 'Гибрид'
              'value': 'option3'
          }
      ]
    })

    nb-input({
        "size": "s"
        "attrs": {
            "placeholder": "Please, enter your name"
        }
        "content": "Viktor"
        "id": "input"
        "name": "last-name"

    })

    nb-toggler({
        "id": "toggler"
        "attrs": {
            "value": "value"
        }
    })

    nb-toggler({
        "disabled": true()
        "id": "toggler-disabled"
    })

    nb-toggler({
        "checked": true()
        "id": "toggler-checked"
    })
}

match .*[.checkbox-label == 'uniq-str'] nb-checkbox-label {
    <span>
        "1"
    </span>
}
