/*
    Кнопка.
*/

@import '_skin-dark'

$skin-islands-button-content = '.nb-button-content'
$skin-islands-button-disabled = '.is-nb-disabled'

// Каркас кнопки
.nb-button
  kind: button

// Обычная кнопка
.nb-normal-button
  skin: button

// Маленькая обычная кнопка
.nb-small-button
  skin: button small

// Летающая кнопка
.nb-flying-button
  skin: button fly

// Маленькая летающая кнопка
.nb-small-flying-button
  skin: button fly small

// Кнопка-действие
.nb-action-button
  skin: action-button

// Маленькая кнопка-действие
.nb-small-action-button
  skin: action-button small

// Темная кнопка
.nb-dark-button
  skin: dark-button

// Little black --dress-- button
.nb-small-dark-button
  skin: dark-button small

// Псевдо-кнопка
.nb-pseudo-button
  skin: pseudo-button

// Маленькая псевдо-кнопка
.nb-small-pseudo-button
  skin: pseudo-button small

// Кнопка аттача
.nb-file-intruder
  kind: file-intruder \
    (-inner '&-inner') \
    (-input '&-input') \
    (-focus '&-focus' 'islands-button_focus_style')
