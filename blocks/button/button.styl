/*
    Кнопка.
*/

@import '_skin-dark'

$skin-islands-button-content = '._nb-button-content'

.nb-button
  kind: button
  position: relative // Why is it there?
  text-align: center // Fixes #323

._nb-normal-button
  skin: button

._nb-small-button
  skin: button small

._nb-flying-button
  skin: button fly

._nb-small-flying-button
  skin: button fly small

._nb-action-button
  skin: action-button

._nb-small-action-button
  skin: action-button small

._nb-dark-button
  skin: dark-button

._nb-small-dark-button
  skin: dark-button small

._nb-pseudo-button
  skin: pseudo-button

._nb-small-pseudo-button
  skin: pseudo-button small

// Псевдо-кнопка
._nb-pseudo-inverted-button
  skin: pseudo-button _inverted

// Маленькая псевдо-кнопка
._nb-small-pseudo-inverted-button
  skin: pseudo-button _inverted small

// Промо-кнопка
._nb-promo-button
  skin: promo-button

._nb-small-promo-button
  skin: promo-button small

._nb-large-promo-button
  skin: promo-button large

._nb-extra-large-promo-button
  skin: promo-button xlarge

// Кнопка аттача
._nb-file-intruder
  kind: file-intruder \
    (__inner '&-inner') \
    (__input '&-input') \
    (__focus '&-focus' 'islands-button_focus_style')

.nb-button.ui-state-active
  skin: button_pressed
