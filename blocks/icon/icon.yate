func nb-icon(nodeset options) {
    default = {
        'size': 's'
    }


    nb-block('ico', nb-extend(default, options))
    if!(nb-extend(default, options).icon) {
        log('debug')
            log(options)
            log(nb-extend(default, options))
    }

}

match .ico nb {
    <img>
       @class = 'nb-icon nb-{ .size }{ .icon  != '' ? '-' + .icon  : '' }-icon'
    </img>
}