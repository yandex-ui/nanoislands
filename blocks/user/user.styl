nb-user()

  $s = 32px
  $m = 42px

  $fzs = 13px
  $fzm = 15px

  $lhs = $fzs * 1.2
  $lhm = $fzm * 1.2

  .nb-user
    cursor: pointer
    display: inline-block
    position: relative

  .nb-user-pseudo
    display: inline-block
    width: 100%

  .nb-user-avatar
    display: inline-block
    vertical-align: middle
    border-radius: 50%
    position: relative

    background-size: cover
    background-position: 50% 50%
    box-shadow: inset 0 1px 0 1px rgba(0, 0, 0, 0.15)
    background-image: url('avatar.png')

  .nb-user-notice-count
    position: absolute
    right: -4px
    top: -4px

    user-select: none

    background: #ff0000
    box-shadow: 0 1px 0 1px rgba(0, 0, 0, 0.1), 0 5px 10px -5px rgba(0, 0, 0, 0.5)

    color: #fff
    font-weight: bold

    border-radius: 50%
    border: 2px solid $background

    width: 15px
    height: 15px

    font-size: 13px
    line-height: 15px
    text-align: center

  .nb-user-label
    display: inline-block
    vertical-align: middle
    text-align: left

  .nb-normal-user
    font-size: $fzm
    height: $m

    .nb-user-avatar
      width: $m
      height: $m

  .nb-small-user
    font-size: $fzs
    height: $s

    .nb-user-avatar
      width: $s
      height: $s

  .nb-user_ltr
    .nb-user-avatar
      margin-left: 0

    .nb-user-label
      margin-left: $gapS

  .nb-user_rtl
    .nb-user-avatar
      margin-left: $gapS

    .nb-user-label
      margin-left: 0

  .nb-user-email
    color: #999

  .nb-user-name
  .nb-user-email
    display: block

  .nb-normal-user
    line-height: $lhm
  .nb-small-user
    line-height: $lhs

  .nb-user-email
    font-size: 0.95em

  .nb-user-name._link
    color: #000

  .nb-user-name:first-letter
  .nb-user:hover .nb-user-name
    color: #d00


  .nb-user_justify
    display: block
    text-align: justify

    .nb-user-label
      display: block

    .nb-user-name
    .nb-user-email
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      position: relative

    .nb-user-avatar
      position: absolute
      top: 0

  .nb-user_justify.nb-user_rtl
      .nb-user-avatar
        right: 0

  .nb-user_justify.nb-user_rtl.nb-small-user
    .nb-user-label
      margin-right: ($s + $gapS)

  .nb-user_justify.nb-user_rtl.nb-normal-user
    .nb-user-label
      margin-right: ($m + $gapS)

  .nb-user_justify.nb-user_ltr
    .nb-user-avatar
      left: 0

  .nb-user_justify.nb-user_ltr.nb-small-user
    .nb-user-label
      margin-left: ($s + $gapS)

  .nb-user_justify.nb-user_ltr.nb-normal-user
    .nb-user-label
      margin-left: ($m + $gapS)


  .nb-user_justify.nb-small-user
    .nb-user-label
      padding-top: ($m/2 - $lhm)

    .nb-user-name:only-child
      top: ($lhm/2)

  .nb-user_justify.nb-small-user
    .nb-user-label
      padding-top: ($s/2 - $lhs)

    .nb-user-name:only-child
      top: ($lhs/2)


nb-user()
