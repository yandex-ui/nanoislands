func nb-tabs(nodeset options) {
    default = {
        'size': 'm'
    }

    nb-block('tabs', nb-extend(default, options))
}

match .tabs nb {
    <div data-nb="tabs">
        _size-theme-type-class({
            'name': 'tabs'
            'size': .size
            if .rise {
                'type': 'rise-' + .rise
            }
         })
         @class += " _init"

        apply . nb-main-attrs

        prefix = "tabs-{nb-uniq()}"

        <ul class="nb-tabs-tabs">
            for .items {
                <li class="nb-tabs-tab">
                    if .active {
                        @class += " ui-tabs-active"
                    }

                    <a class="nb-tabs-link _link" href="#{prefix}-{index()}">
                        .title
                    </a>
                </li>
            }
        </ul>

        for .items {
            <div class="nb-tabs-panel" id="{prefix}-{index()}">
                if .content {
                    html( .content )
                }
            </div>
        }
    </div>
}
