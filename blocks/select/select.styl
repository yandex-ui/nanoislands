.nb-select

  &__fallback
    if !ie
      display: none
    if ie
      display: inline-block

  .nb-button__text
    if ie
      display: none !important
    if !ie
      overflow: hidden
      text-overflow: ellipsis
      padding-right: 4px
      margin-right: - @padding-right

      // For baseline alignment
      float: left
      width: 100%

// For baseline alignment,
// TODO: move to Stylobate
.nb-select-helper
  display: inline-block
  width: 0
  overflow: hidden

  &:before
    content: " "

.nb-select .nb-select__button
  box-sizing: border-box
  display: inline-block

.nb-select .nb-button__text:before
.nb-select__dropdown .nb-select__item_type_group > .nb-select__a > .nb-select__text:before
  content: ""
  skin: icon_dropdown selecty

.nb-select.nb-button_size_s .nb-button__text:before
.nb-select__dropdown_size_s .nb-select__item_type_group > .nb-select__a  > .nb-select__text:before
  skin: icon_dropdown selecty small

.nb-select__dropdown .nb-select__item_type_group > .nb-select__a  > .nb-select__text:before
.nb-select__dropdown_size_s .nb-select__item_type_group > .nb-select__a  > .nb-select__text:before
  transform: scale(0.75) rotate(-45deg) translate(3px, 5px)

.nb-select__dropdown .ui-menu
  skin: isle fly, menu no-elements
  position: absolute
  z-index: 10000

  reset: ul
  list-style-type: none // move to reset

.nb-select__item
  reset: li

.nb-select__text
  skin: menu-item (_checked '.nb-select__item_selected_yes &')
  white-space: nowrap

.nb-select__item_selected_yes
  .nb-select__text
    padding-left: 1.5em

// .nb-select__item_inner_yes .nb-select__text
//   padding-left: 2em

// .nb-select__item_label_yes .nb-select__text
//   font-weight: bold

.nb-select__separator
  skin: menu-separator padded

.nb-select__popup .popup__content
  overflow-x: hidden
  overflow-y: auto
  padding: 0

.nb-select__dropdown_size_s .nb-select__item .nb-select__text
  skin: menu-item_size small

.nb-select_theme_normal .ui-state-focus > .nb-select__text,
.nb-select_theme_normal .ui-menu-item_hovered_yes > .nb-select__a > .nb-select__text,
.nb-select_theme_normal .ui-menu-item:hover > .nb-select__a > .nb-select__text
  skin: menu-item_hover

// FIXME: we need to use `nb-is-disabled` here
.nb-select_theme_normal .ui-menu-item_disabled_yes
  kind: disabled 0.6 (-nested '')
