.nb-select
  kind: block inline
  max-width: 100%
  vertical-align: baseline

  &__fallback
    if !ie
      display: none
    if ie
      display: inline-block

  &__button
    if ie
      display: none


.nb-select .nb-button-content:before
  content: ""
  skin: icon_dropdown selecty

.nb-select .nb-button_size_s .nb-button-content:before
  skin: icon_dropdown selecty small

nb-select()
  .nb-select .ui-menu

    -webkit-user-select: none
    -moz-user-select: none
    user-select: none
    margin: 0 1px
    padding: 0

    -webkit-overflow-scrolling: touch /*LEGO-7899*/
    background: #FFF
    box-shadow: 0px 0px 0px 1px rgba(0,0,0,.15), 0px 8px 30px -5px rgba(0,0,0,.5)

  .nb-select__item
    cursor: default
    white-space: nowrap

  .nb-select__item.ui-menu-item .nb-select__text
    -moz-box-sizing: border-box
    -moz-user-select: none
    display: inline-block
    max-width: 100%
    overflow-x: hidden
    overflow-y: hidden
    padding-bottom: 0
    padding-left: 1em
    padding-right: 2.5em
    padding-top: 0
    position: relative
    text-overflow: ellipsis
    vertical-align: top

  .nb-select__item_selected_yes .nb-select__text:after
    background-attachment: scroll
    background-clip: border-box
    background-color: transparent
    background-image: url("data:image/svg+xml;base64,")
    background-origin: padding-box
    background-position: 50% 50%
    background-repeat: no-repeat
    background-size: 100% auto
    content: ""
    height: 1em
    position: absolute
    right: 1em
    top: 0.4em
    width: 1.1em

  .i-ua_inlinesvg_no .nb-select__item_selected_yes .nb-select__text:after
    background-attachment: scroll
    background-clip: border-box
    background-color: transparent
    background-image: url("../../../../../i/8mHn_Rsr7nJcpTqMcpRQLGAlOAM.png")
    background-origin: padding-box
    background-position: 0 0
    background-repeat: no-repeat
    background-size: auto auto

  .nb-select__item_inner_yes .nb-select__text
    padding-left: 2em

  .nb-select__item_label_yes .nb-select__text
    font-weight: bold

  .nb-select__list
    overflow-x: hidden
    overflow-y: hidden
    position: relative

  .nb-select__separator
    -moz-font-feature-settings: normal
    -moz-font-language-override: normal
    -x-system-font: none
    border-top-color: -moz-use-text-color
    border-top-style: solid
    border-top-width: 1px
    float: left
    font-family: a
    font-size: 0
    font-size-adjust: none
    font-stretch: normal
    font-style: normal
    font-variant: normal
    font-weight: normal
    line-height: 0
    margin-top: -1px
    position: relative
    width: 100%
    z-index: 3

  .nb-select__popup .popup__content
    overflow-x: hidden
    overflow-y: auto
    padding-bottom: 0
    padding-left: 0
    padding-right: 0
    padding-top: 0

  .nb-select.nb-select_size_m .nb-select__fallback
  .nb-select.nb-select_size_m .nb-select__item
  .nb-select.nb-select_size_m .nb-select__item .nb-select__text
      font-size: 15px
      line-height: 32px

  .nb-select.nb-select_size_s .nb-select__fallback
  .nb-select.nb-select_size_s .nb-select__item
  .nb-select.nb-select_size_s .nb-select__item .nb-select__text
      font-size: 13px
      line-height: 28px


  .nb-select_theme_normal
  .nb-select_theme_normal .ui-menu-item
    font-family: Arial,sans-serif

  .nb-select_theme_normal .ui-state-focus
  .nb-select_theme_normal .ui-menu-item_hovered_yes
  .nb-select_theme_normal .ui-menu-item:hover
    background-color: $bgMenuItemSelected

  .nb-select_theme_normal .ui-menu-item_disabled_yes
    color: $foregroundMutedMore

  .nb-select__popup_theme_normal .nb-select__separator
    border-bottom-color: #DDDDDD
    border-left-color-ltr-source: physical
    border-left-color-rtl-source: physical
    border-left-color-value: #DDDDDD
    border-right-color-ltr-source: physical
    border-right-color-rtl-source: physical
    border-right-color-value: #DDDDDD
    border-top-color: #DDDDDD


  .nb-select .ui-menu .ui-menu-item a.ui-state-focus
  .nb-select  .ui-menu .ui-menu-item a.ui-state-active
    font-weight: 400
    margin: 0

nb-select()
