func nb-island(nodeset options) {
    island = {
        'content': ''
    }

    nb-block('island', nb-extend(island, options))

}

match .island nb {
    <div>
        apply . nb-main-attrs

        type = (if .type {
            '-' + .type
        } else {
            ''
        })

        padding = (if .padding == 's' {
            '-small'
        } else if .padding == 'l' {
            '-large'
        } else if .padding == 'm' {
            ''
        })

        @class += 'nb-island nb{ type }{ padding }-island'

        if .content {
            html(.content)
        }
    </div>
}

