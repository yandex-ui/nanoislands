func nb-input-group(nodeset options) {
    nb-block('input-group', options)
}

match .input-group nb {
    <div class = 'nb-input-group' data-nb = 'input-group'>
        apply . nb-main-attrs

        if .disabled {
            @class += ' is-disabled'
            @data-nb-disabled = 'true'
        }

        for .* {
                   if name() == 'button'       { nb-button(.)
            } else if name() == 'input'        { nb-input(.)
            }
        }
    </div>
}