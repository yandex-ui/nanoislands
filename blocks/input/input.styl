._nb-simple-input
._nb-small-simple-input
._nb-large-simple-input
._nb-normal-input
  kind: input
  skin: input

  &._nb-is-focused
    skin: input_focus


._nb-small-simple-input
    skin: input small
    // reset default styles for <input type="search"/>
    -webkit-appearance: textfield
  &._nb-is-focused
    skin: input_focus

._nb-large-simple-input
    skin: input large
    // reset default styles for <input type="search"/>
    -webkit-appearance: textfield

._nb-complex-input
._nb-small-complex-input
  kind: field $islands_s $islands_s
  skin: input-box

._nb-small-complex-input
  skin: input-box small

._nb-simple-input
._nb-complex-input
._nb-small-complex-input
._nb-large-complex-input
._nb-small-simple-input
._nb-large-simple-input
  ._nb-input-content
    kind: field-content

  ._nb-input-controller
    kind: input

    z-index: 9

    width: 100%
    height: 100%

  & textarea._nb-input-controller
    vertical-align: top
    resize: none

  ._nb-input-view
    border: 1px solid transparent
    kind: fill -1px
    skin: input-view no-focus

    z-index: 8

  &:not(._nb-is-disabled):focus ._nb-input-view
  &:not(._nb-is-disabled)._nb-is-focused ._nb-input-view
    skin: input_focus

  ._nb-input-reset
    kind: field-right 0.5*$islands_s
    skin: icon _remove with-hover
    margin-right: $islands_s * -1
    height: auto

    &:before
      content: "Â " // utf nbsp here

  ._nb-input-left
    kind: field-left 0.5*$islands_s
    margin-left: $islands_s * -1
    height: auto

  ._nb-input-right
    kind: field-right 0.5*$islands_s
    margin-right: $islands_s * -1
    height: auto

  &._nb-is-ghost:not(._nb-is-focused) ._nb-input-view
    border: none
    background: none
    box-shadow: none

  ._nb-input-hint
    // In quotes, 'cause there is conflict with nib's input function
    skin: 'input-placeholder' (-inner '&-inner') (-ghost '&-ghost')

._nb-small-simple-input
._nb-small-complex-input
  ._nb-input-hint-inner
    line-height: $islands_m
    font-size: $islands_text_s

.nb-input._nb-is-wrong
  skin: input_error

._nb-input-controller::-ms-clear
._nb-input::-ms-clear
  display: none



