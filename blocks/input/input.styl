.nb-simple-input
  kind: input
  skin: input

  &.nb-is-focused
    skin: input_focus


.nb-small-simple-input
    skin: input small
    // reset default styles for <input type="search"/>
    -webkit-appearance: textfield
  &.nb-is-focused
    skin: input_focus

.nb-large-simple-input
    skin: input large
    // reset default styles for <input type="search"/>
    -webkit-appearance: textfield

.nb-complex-input
.nb-small-complex-input
  kind: field $islands_s $islands_s
  skin: input-box

.nb-small-complex-input
  skin: input-box small

.nb-complex-input
.nb-small-complex-input
  .nb-input-content
    kind: field-content

  .nb-input-controller
    kind: input
    z-index: 9
    width: 100%
    height: 100%

  & textarea.nb-input-controller
    vertical-align: top
    resize: none

  .nb-input-view
    border: 1px solid transparent
    kind: fill -1px
    skin: input-view no-focus

  &:not(.nb-is-disabled):focus .nb-input-view
  &:not(.nb-is-disabled).nb-is-focused .nb-input-view
    skin: input_focus

  .nb-input-reset
    kind: field-right 0.5*$islands_s
    skin: icon _remove with-hover
    margin-right: $islands_s * -1
    height: auto

    &:before
      content: "Â " // utf nbsp here

  .nb-input-left
    kind: field-left 0.5*$islands_s
    margin-left: $islands_s * -1
    height: auto

  .nb-input-right
    kind: field-right 0.5*$islands_s
    margin-right: $islands_s * -1
    height: auto

  &.is-ghost:not(.nb-is-focused) .nb-input-view
    border: none
    background: none
    box-shadow: none

  .nb-input-hint
    // In quotes, 'cause there is conflict with nib's input function
    skin: 'input-placeholder' (-inner '&-inner') (-ghost '&-ghost')

.nb-complex-input
.nb-small-complex-input
  .nb-input-hint-inner
    line-height: $islands_m
    font-size: $islands_text_s

.nb-input.is-wrong
  skin: input_error

.nb-input-controller::-ms-clear
.nb-input::-ms-clear
  display: none



