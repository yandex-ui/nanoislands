// global classes for block margins
// Example: .nb-gap_top_s .nb-gap_right_m

for gap-side in 'top' 'left' 'bottom' 'right'
  .nb-gap_{gap-side}_xs
    margin-{gap-side}: $islands_xs

  .nb-gap_{gap-side}_s
    margin-{gap-side}: $islands_s

  .nb-gap_{gap-side}_m
    margin-{gap-side}: $islands_m

  .nb-gap_{gap-side}_l
    margin-{gap-side}: $islands_l
