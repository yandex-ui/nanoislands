$toggler-height_s = 28px
$toggler-width_s = 72px

$toggler-height_m = 32px
$toggler-width_m = 82px

.nb-toggler
  position: relative
  display: inline-block
  cursor: pointer
  vertical-align: top
  overflow: hidden
  outline: none

.nb-toggler:focus:not(.is-disabled)
.nb-toggler_focus
  box-shadow: 0 1px 0 rgba(0,0,0,.07), 0 0 6px 2px rgba(255,204,0,.7)

.nb-toggler__container
  display: block
  position: absolute
  right: 0

  width: 100%
  height: 100%

.nb-toggler__checkbox
  position: absolute
  left: -99999px

.nb-toggler__label
  width: 100%
  height: 100%
  display: block
  position: absolute

.nb-toggler__sticker
  position: absolute
  text-align: center
  overflow: hidden
  height: 100%
  transition: width .2s ease
  border-radius: 3px
  user-select: none

.nb-toggler__sticker:before
  position: absolute
  top: 1px
  left: 1px
  bottom: 1px
  right: 1px
  content: ''
  border-radius: 3px

.nb-toggler__sticker_left
  left: 0
  background: rgba(255,236,166,.4)
  box-shadow: inset 0 1px 5px rgba(30,23,0,.8), 0 2px 0 -1px rgba(255,255,255,.2)
  width: 0

.nb-toggler__sticker_left:before
  background: #ffeca6
  background: linear-gradient(to bottom, #ffeca6 0,#fff6d5 100%)
  box-shadow: inset 0 1px 3px -1px rgba(0,0,0,.45)

.nb-toggler__sticker_right
  right: 0
  background: rgba(0,0,0,0.07)
  box-shadow: inset 0 1px 3px rgba(0,0,0,.3), inset 0 0 0 1px rgba(0,0,0,.15), 0 1px 0 rgba(255,255,255,.2)
  width: 100%

.nb-toggler__knob
  border-radius: 3px
  z-index: 1
  background: linear-gradient(to bottom, rgba(0,0,0,0.2) 0,rgba(0,0,0,0.4) 100%)
  box-shadow: 0 1px 0 rgba(0,0,0,.07)

  transition: left .2s ease

  position: absolute
  left: 0

.nb-toggler__knob:before
  position: absolute
  top: 1px
  right: 1px
  bottom: 1px
  left: 1px

  content: ''
  border-radius: 2px
  background: #fff
  background: linear-gradient(to bottom, #fff 0,#eee 100%)

.nb-toggler__text
  color: #7A7254
  z-index: 1
  position: relative
  display: inline-block

.nb-toggler__sticker_right
  .nb-toggler__text
    float: right
    transition: right .2s ease

.nb-toggler__sticker_left
  .nb-toggler__text
    float: left
    transition: left .2s ease

/* Sizes */

.nb-toggler_size_s
  width: $toggler-width_s
  height: $toggler-height_s

  .nb-toggler__knob
    height: $toggler-height_s
    width: @height

  .nb-toggler__text
    line-height: $toggler-height_s
    width: $toggler-width_s - $toggler-height_s

  .nb-toggler__sticker_left
    .nb-toggler__text
      left: - ($toggler-width_s - $toggler-height_s)

.nb-toggler_size_m
  width: $toggler-width_m
  height: $toggler-height_m

  .nb-toggler__knob
    height: $toggler-height_m
    width: @height

  .nb-toggler__text
    line-height: $toggler-height_m
    width: $toggler-width_m - $toggler-height_m

  .nb-toggler__sticker_left
    .nb-toggler__text
      left: - ($toggler-width_m - $toggler-height_m)

/* Checked */

.nb-toggler_checked
  .nb-toggler__sticker_left
    width: 100%

  .nb-toggler__sticker_right
    width: 0

.nb-toggler_checked.nb-toggler_size_s
  .nb-toggler__knob
    left: $toggler-width_s - $toggler-height_s

  .nb-toggler__sticker_right
    .nb-toggler__text
      right: - ($toggler-width_s - $toggler-height_s)

  .nb-toggler__sticker_left
    .nb-toggler__text
      left: 0

.nb-toggler_checked.nb-toggler_size_m
  .nb-toggler__knob
    left: $toggler-width_m - $toggler-height_m

  .nb-toggler__sticker_right
    .nb-toggler__text
      right: - ($toggler-width_m - $toggler-height_m)

  .nb-toggler__sticker_left
    .nb-toggler__text
      left: 0