/*
    Кнопка.
*/

._nb-small-button
  skin: v3-button (__content '& ._nb-button-content') (_size small)

._nb-normal-button
  skin: v3-button (__content '& ._nb-button-content')

._nb-large-button
  skin: v3-button (__content '& ._nb-button-content') (_size large)

._nb-extra-large-button
  skin: v3-button (__content '& ._nb-button-content') (_size xl)


// there is no flying mode in v3 guides
._nb-small-flying-button
  skin: v3-button (__content '& ._nb-button-content') (_size small)
  /*skin: isle fly*/

._nb-flying-button
  skin: v3-button (__content '& ._nb-button-content')
  /*skin: isle fly*/

._nb-large-flying-button
  skin: v3-button (__content '& ._nb-button-content') (_size large)
  /*skin: isle fly*/

._nb-extra-large-flying-button
  skin: v3-button (__content '& ._nb-button-content') (_size xl)
  /*skin: isle fly*/


._nb-small-action-button
  skin: v3-button (__content '& ._nb-button-content') (_type action) (_size small)

._nb-action-button
  skin: v3-button (__content '& ._nb-button-content') (_type action)

._nb-large-action-button
  skin: v3-button (__content '& ._nb-button-content') (_type action) (_size large)

._nb-extra-large-action-button
  skin: v3-button (__content '& ._nb-button-content') (_type action) (_size xl)


._nb-small-dark-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark) (_size small)

._nb-dark-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark)

._nb-large-dark-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark) (_size large)

._nb-extra-large-dark-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark) (_size xl)


._nb-small-pseudo-button
  skin: v3-button (__content '& ._nb-button-content') (_type pseudo) (_size small)

._nb-pseudo-button
  skin: v3-button (__content '& ._nb-button-content') (_type pseudo)

._nb-large-pseudo-button
  skin: v3-button (__content '& ._nb-button-content') (_type pseudo) (_size large)

._nb-extra-large-pseudo-button
  skin: v3-button (__content '& ._nb-button-content') (_type pseudo) (_size xl)

._nb-small-clear-button
  skin: v3-button (__content '& ._nb-button-content') (_type clear) (_size small)

._nb-clear-button
  skin: v3-button (__content '& ._nb-button-content') (_type clear)

._nb-large-clear-button
  skin: v3-button (__content '& ._nb-button-content') (_type clear) (_size large)

._nb-extra-large-clear-button
  skin: v3-button (__content '& ._nb-button-content') (_type clear) (_size xl)


._nb-small-pseudo-inverted-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark-pseudo) (_size small)

._nb-pseudo-inverted-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark-pseudo)

._nb-large-pseudo-inverted-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark-pseudo) (_size large)

._nb-extra-large-pseudo-inverted-button
  skin: v3-button (__content '& ._nb-button-content') (_type dark-pseudo) (_size xl)


// Промо-кнопка
._nb-promo-button
  kind: button
  position: relative // Why is it there?
  text-align: center // Fixes #323
  skin: promo-button

._nb-small-promo-button
  kind: button
  position: relative // Why is it there?
  text-align: center // Fixes #323
  skin: promo-button small

._nb-large-promo-button
  kind: button
  position: relative // Why is it there?
  text-align: center // Fixes #323
  skin: promo-button large

._nb-extra-large-promo-button
  kind: button
  position: relative // Why is it there?
  text-align: center // Fixes #323
  skin: promo-button xlarge

// Отдельные состояния

._nb-checkbox-input:checked + ._nb-checkbox-label ._nb-button-content
  skin: v3-button_checked

._nb-checkbox-input:focus + ._nb-checkbox-label ._nb-button-content
  skin: v3-button_focus


// Кнопка аттача
._nb-file-intruder
  kind: file-intruder \
    (__inner '&-inner') \
    (__input '&-input') \
    (__focus '&-focus' 'islands-button_focus_style')

