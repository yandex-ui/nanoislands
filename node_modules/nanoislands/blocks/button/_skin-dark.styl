// Dark button
skin-islands-dark-button()
  skin-islands-proto-button(arguments)

  $top = lighten($foreground, 36%)
  $bottom = lighten($foreground, 26%)

  color: darken($background, 5%)

  if !ie
    gradient: $foreground 0.7, 0.84

    &:before
      gradient: $top, $bottom
      box-shadow: inset 0 1px rgba($background, 0.1)

  else
    background: mix($top, $bottom, 50%)
    border: 1px solid
    border-color: lighten($foreground, 30%) lighten($foreground, 27%) lighten($foreground, 24%)

  unless no-hover in arguments
    input[type=file]:hover:not(:checked) + &,
    &:not({$skin-islands-button-disabled}):hover
      skin-islands-dark-button_hover()

// Hover state for dark
skin-islands-dark-button_hover()
  $top = lighten($foreground, 40%)
  $bottom = lighten($foreground, 28%)

  gradient: $foreground 0.66, 0.82

  &:before
    gradient: $top, $bottom
