.nb-dropzone
  margin: 0 $gapL $gapL $gapL
  position: relative
  padding: 20px
  text-align: center

._nb-normal-dropzone
  color: rgba(0,0,0,.8)
  background: #ecebe9
  cursor: pointer

  &:before
    border: 2px dashed rgba(0,0,0,.2)
    content: ""
    position: absolute
    top: 0px
    bottom: 0px
    left: 0px
    right: 0px

  &:hover
    background: #e2e1df

._nb-dropzone-head
  margin-bottom: 8px
  font: $font-h3

._nb-dropzone-text
  font-size: 13px
  line-height: 24px

._nb-dropzone-button
  margin-left:  8px

._nb-modal-dropzone
  color:  $foregroundSecondary
  position: fixed
  top:  0
  left:  0
  bottom:  0
  right: 0
  margin-top: $gapL
  z-index:  120

  box-shadow: none

  border: 5px dashed rgba(255,255,255, 1)

  ._nb-dropzone-head
    margin-bottom: 0
    width: 100%
    margin-top: 30px
    text-align: center
    font-size: 60px

  ._nb-dropzone-cover
    position: absolute
    top:  0
    right:  0
    left:  0
    bottom:  0

