.nb-service-arrow
  kind: block inline
  skin: arrow (-helper '& > .nb-arrow-tail')

  a&
    skin: link #000

.nb-search-arrow
  kind: block
  skin: arrow search

  &-content
    kind: shrink

  &-content > &-input
    width: 100%

  &-button
    kind: shrink-right
    margin-left: $islands_xs

.nb-search-arrow-label
  kind: field-left 0.5*$islands_s
  skin: input-label

  // Make proper when there would be a possibility to add left part without wrapper
  padding: 0.5*$islands_s $islands_s
  margin-right: 0.5*$islands_s
