kind-group()
  @extends $kind-group

$kind-group
  kind-block(inline)
  white-space: nowrap

kind-group-item()
  unless no-radius in arguments
    &:first-child:not(:only-child)
      kind-group-start(arguments)

    &:not(:first-child):not(:last-child)
      kind-group-middle(arguments)

    &:last-child:not(:only-child)
      kind-group-end(arguments)

kind-group-start()
  {utilus_alike(arguments, '')}
    $placeholder = vertical in arguments ? '$kind-group-start_vertical' : '$kind-group-start'
    @extends {$placeholder}

$kind-group-start
  unless ie
    border-top-right-radius: 0 !important
    border-bottom-right-radius: 0 !important

$kind-group-start_vertical
  unless ie
    border-bottom-right-radius: 0 !important
    border-bottom-left-radius: 0 !important

kind-group-end()
  unless no-margin in arguments
    $placeholder = vertical in arguments ? '$kind-group-margin_vertical' : '$kind-group-margin'
    @extends {$placeholder}

  {utilus_alike(arguments, '')}
    $placeholder = vertical in arguments ? '$kind-group-end_vertical' : '$kind-group-end'
    @extends {$placeholder}

$kind-group-end
  unless ie
    border-top-left-radius: 0 !important
    border-bottom-left-radius: 0 !important

$kind-group-end_vertical
  unless ie
    border-top-right-radius: 0 !important
    border-top-left-radius: 0 !important

$kind-group-margin
  margin-left: -1px

$kind-group-margin_vertical
  margin-top: -1px

kind-group-middle()
  unless no-margin in arguments
    $placeholder = vertical in arguments ? '$kind-group-margin_vertical' : '$kind-group-margin'
    @extends {$placeholder}

  $selector = utilus_alike(arguments, '')
  if $selector != ''
    {$selector}
      border-radius: 0 !important
  else
    border-radius: 0 !important
