// TODO: replace / add modifier for flex-based baseliner.

kind-baseliner($this)
  display: inline-block

  if !ie
    vertical-align: baseline
  else
    vertical-align: middle

stylobate_defaults('kind-baseliner', __helper '&:before')

kind-baseliner__content()
  float: left
  width: 100%

kind-baseliner__helper()
  display: inline-block
  overflow: hidden

  width: 0

  // Inserting a space
  if match(':(before|after)', selector())
    content: " "
  else
    &:before
      content: " "
