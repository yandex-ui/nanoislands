stylobate_defaults('kind-centering', __helper '&:before')

kind-centering($this)
  white-space: nowrap
  text-align: center

kind-centering__helper()
  +cache()
    content: "" // As it should be empty element anyway, it's safe to use here
    display: inline-block
    vertical-align: middle

    height: 100%

kind-centering__item()
  +cache()
    display: inline-block
    white-space: normal
    vertical-align: middle
    text-align: left
