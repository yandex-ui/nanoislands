kind-centering($this)
  white-space: nowrap
  text-align: center

  stylobate_defaults($this,
    -helper '&:before')

kind-centering-helper()
  +cache()
    content: "" // As it should be empty element anyway, it's safe to use here
    display: inline-block
    vertical-align: middle

    height: 100%

kind-centering-item()
  +cache()
    display: inline-block
    white-space: normal
    vertical-align: middle
    text-align: left
