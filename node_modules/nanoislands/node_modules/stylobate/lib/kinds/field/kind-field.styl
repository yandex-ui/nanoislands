kind-field($this)
  kind(input no-reset)

  unless $this.params.no-elements
    unless $this.elements.-content
      &-content
        kind-field-content()

    unless $this.elements.-left
      &-left
        kind-field-left($this)

    unless $this.elements.-right
      &-right
        kind-field-right($this)

kind-field-content()
  +cache()
    kind('block' static)

    overflow: hidden

    height: 100%

kind-field-left($this)
  +cache()
    position: relative
    z-index: 9
    float: left

  $sides = any_get_sides($this)
  unless $this.params.no-margin
    margin: -1*$sides[0] 0 -1*$sides[2] -1*$sides[3]

  unless $this.params.no-padding
    padding: $sides

kind-field-right($this)
  +cache()
    position: relative
    z-index: 9
    float: right

  $sides = any_get_sides($this)
  unless $this.params.no-margin
    margin: -1*$sides[0] -1*$sides[1] -1*$sides[2] 0

  unless $this.params.no-padding
    padding: $sides
