kind-modal-wrap($this)
  $args = $this.arguments
  prepend($args, guide)
  kind($args)
  kind(centering (-helper ''))

  z-index: 99

  stylobate_defaults($this,
    -helper '&:after')

kind-modal-wrap-helper()
  kind-centering-helper(arguments)

kind-modal()
  kind-guide-item(arguments)
  kind-centering-item(arguments)

  position: relative
  max-width: 100%
  max-height: 100%
  // use calc like this here?
  //   max-width: unquote("-webkit-calc(100% - " + 2*$l + ")")

  // Should it be moved to -content?
  // overflow: auto

kind-modal-overlay()
  kind-fill(arguments)
  kind-guide-item(arguments)
