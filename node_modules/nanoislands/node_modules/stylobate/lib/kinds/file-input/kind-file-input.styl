kind-file-input($this)
  +cache()
    kind('block' inline)

    overflow: hidden

  $extrude = $this.units[0]
  if $extrude
    padding: $extrude
    margin: $extrude * -1

kind-file-input__input()
  +cache()
    z-index: 10
    position: absolute
    right: 0
    bottom: 0

    min-width: 100%
    padding: 0
    margin: 0

    cursor: pointer

    // Could it be replaced with anything more sane?
    font-size: 500px

    opacity: 0
