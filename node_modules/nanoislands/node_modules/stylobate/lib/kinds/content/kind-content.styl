kind-content($this)
  $sides = utilus_get_sides($this.arguments)
  if ie or ('' + $sides == '0 0 0 0')
    padding: $sides
  else
    padding: 0 $sides[1] 0 $sides[3]

    stylobate_defaults($this,
      -before ($this.params.no-before or $this.params.no-elements ? '' : '&:before'),
      -after ($this.params.no-after or $this.params.no-elements ? '' : '&:after'))

    if $this.params.no-before or $this.params.-before
      padding-top: $sides[0]

    if $this.params.no-after or $this.params.-after
      padding-top: $sides[2]

  // Deprecating no-â€¦
  deprecate($this.params, no-before)
  deprecate($this.params, no-after)
  depecate_removed($this.params, no-elements)


kind-content-before($this)
  pseudo-with-content()

  display: table

  margin-bottom: any_get_sides($this)[0]

kind-content-after($this)
  pseudo-with-content()

  display: table
  clear: both

  margin-top: any_get_sides($this)[2]
