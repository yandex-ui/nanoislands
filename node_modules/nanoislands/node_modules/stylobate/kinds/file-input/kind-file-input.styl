kind-file-input()
  @extends $kind-file-input

  $extrude = utilus_get_unit(arguments)
  if $extrude
    padding: $extrude
    margin: $extrude * -1

$kind-file-input
  kind-block(inline)

  overflow: hidden

kind-file-input-input()
  @extends $kind-file-input-input

$kind-file-input-input
  z-index: 10
  position: absolute
  right: 0
  bottom: 0

  min-width: 100%
  padding: 0
  margin: 0

  cursor: pointer

  // Could it be replaced with anything mpore sane?
  font-size: 500px

  opacity: 0
