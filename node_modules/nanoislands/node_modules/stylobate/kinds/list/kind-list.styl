kind-list()
  kind-block()

  // Getting the nowrap
  if utilus_retrieve(arguments, nowrap nobr)
    white-space: nowrap

  // Getting the align
  $align = utilus_retrieve(arguments, left right center justify justify-all, left)
  if $align
    text-align: $align

  // Placing the type
  $type = utilus_retrieve(arguments, separate tight, separate)
  $gap = utilus_get(arguments, 'gap')

kind-list-item()
  // Getting the valign
  $valign = utilus_retrieve(arguments, middle baseline bottom, top)
  kind-block(inline, $valign)

  // get the gap from the parent
  $gap = parent_get(arguments, 'gap')
