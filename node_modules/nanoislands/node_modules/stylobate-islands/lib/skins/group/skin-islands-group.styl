skin-islands-group()
  kind: group

$skin-islands-group
  &:before
    right: 0

  input&,
  label&
    border-right-color: transparent

$skin-islands-group_vertical
  &:before
    bottom: 0

  input&,
  label&
    border-bottom-color: transparent

skin-islands-group-start($this)
  kind: group-start '&,&:before' $this.params.vertical

  $placeholder = $this.params.vertical ? '$skin-islands-group_vertical' : '$skin-islands-group'
  @extends {$placeholder}

skin-islands-group-middle($this)
  kind: group-middle '&,&:before' $this.params.vertical

  $placeholder = $this.params.vertical ? '$skin-islands-group_vertical' : '$skin-islands-group'
  @extends {$placeholder}

skin-islands-group-end($this)
  kind: group-end '&,&:before' $this.params.vertical

skin-islands-group-item($this)
  &:first-child:not(:only-child)
    skin-islands-group-start($this)

  &:not(:first-child):not(:last-child)
    skin-islands-group-middle($this)

  &:last-child:not(:only-child)
    skin-islands-group-end($this)

skin-islands-nested-group-item($this)
  $nested-group-item = $this.selectors[0] or '.toggler-view'
  kind: group-item ('& > ' + $nested-group-item + ', & > ' + $nested-group-item + ':before') $this.params.vertical

  &:not(:last-child):not(:only-child) > {$nested-group-item}
    $placeholder = $this.params.vertical ? '$skin-islands-group_vertical' : '$skin-islands-group'
    @extends {$placeholder}

