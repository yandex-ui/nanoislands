func button-images() {
    nb-button({
        'icon': 'eye'
    })

    ' '
    nb-button({
        'iconText': '▼'
    })

    ' '
    nb-button({
          'icon': 'link'
          'content': 'Открыть'
    })
}

func button-disabled() {
    nb-button({
        'content': 'Кнопка'
        'disabled': true()
    })
}

func radio-button() {
    nb-radio-button({
        'size': 'm'
        'name': 'btn'
        'group':  [
            {
                'content': 'Все'
                'value': 'btn1'
            }
            {
                'content': 'Непрочитанные'
                'value': 'btn3'
                'checked': true()
            }
            {
                'content': 'Прочитанные'
                'value': 'btn4'
            }
            {
                'content': 'Удаленные'
                'value': 'btn2'
                'disabled': true()
            }
        ]
    })
    <br/>
    <br/>
     nb-radio-button({
            'size': 's'
            'name': 'btn11'
            'group':  [
                {
                    'content': 'Все'
                    'value': 'btn1'
                }
                {
                    'content': 'Непрочитанные'
                    'value': 'btn3'
                    'checked': true()
                }
            ]
        })
}

func attach-button() {
    nb-button({
        'content': 'Прикрепить файл'
        'theme': 'action'
        'class': [
            'myclass1'
            'myclass2'
        ]
        'type': 'file'
        'attrs': {
            'title': 'Выберите файл'
        }
    })
}


