func button-medium() {

    button = {
        'content': 'Normal button'
 }

    nb-button(button)

    ' '
    nb-button({
        'content': 'Link button'
        'type': 'link'
        'attrs': {
            'href': '#'
        }
    })
    ' '
    nb-button({
        'content': 'Label button'
        'type': 'label'
        'attrs': {
            'for': 'blah'
        }
    })
    ' '
    nb-button({
        'content': 'Span button'
        'type': 'span'
    })
}

func button-small() {
    nb-button({
        'content': 'Применить'
        'size': 's'
    })
}

func button-action() {
    nb-button({
        'content': 'Отправить'
        'size': 's'
        'theme': 'action'
    })
}

func button-circle() {
    nb-button({
        'content': 'Выбрать&hellip;'
        'size': 'm'
        'shape': 'circle'
    })
}

func button-pseudo() {
    nb-button({
        'content': 'Выбрать&hellip;'
        'size': 'm'
