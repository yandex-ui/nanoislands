func input-small() {
    block = {
        'content': 'Москва'
    }
    nb-input(block)
}

func input-medium() {
    nb-input({
         'size': 'm'
         'content': 'Москва и Питер'
    })
}

func input-disabled() {
    block = {
        'disabled': true()
        'content': 'Москва'
    }
    nb-input(block)
}

func input-length() {
    block = {
        'attrs': {
            'length': 11
            'maxlength': 11
            'placeholder': '11 символов'
        }
    }
    nb-input(block)
}

func inputs() {
    <div class="demo-section">
        <div class="demo-h3">
            'Size: M '
            <span class="demo-code demo-code_small">
                '.nb-input_size_m'
            </span>
        </div>

        show(input-medium())
    </div>
    <div class="demo-section">
        <div class="demo-h3">
            'Size: S '
            <span class="demo-code demo-code_small">
                '.nb-input_size_s'
            </span>
        </div>

        show(input-small())
    </div>
    <div class="demo-section">
        <div class="demo-h3">
            'Disabled '
            <span class="demo-code demo-code_small">
                '.is-nb-disabled'
            </span>
        </div>

        show(input-disabled())
    </div>
    <div class="demo-section">
        <div class="demo-h3">
            'Maxlength'
        </div>

        show(input-length())
    </div>
}
