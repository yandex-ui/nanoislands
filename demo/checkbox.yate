func checkbox-radio() {
    radio = {
        'type': 'radio'
        'content': 'Человек'
        'name': 'biotype'
    }

    radio2 = {
        'type': 'radio'
        'content': 'Паук'
        'name': 'biotype'
    }

    nb-checkbox(radio)
    <br />
    nb-checkbox(radio2)
}

func checkbox-button() {
    button = {
        'type': 'button'
        'content': 'Залипающая кнопка'
        'name': 'sticky-button'
    }
    nb-checkbox(button)
}

func checkbox-check() {
    radio = {
        'content': 'Дерево'
        'id': 'task'
        'checked': true()
        'name': 'task'
    }

    radio2 = {
        'content': 'Сын'
        'name': 'task'
    }

    radio3 = {
        'content': 'Дом'
        'name': 'task'
    }

    nb-checkbox(radio)
    <br />
    nb-checkbox(radio2)
    <br />
    nb-checkbox(radio3)
}

func checkbox-small() {
    radio = {
        'type': 'radio'
        'size': 's'
        'content': 'JavaScript'
        'checked': true()
        'name': 'language'
    }

    radio2 = {
        'type': 'radio'
        'size': 's'
        'content': 'Java'
        'name': 'language'
    }

    nb-checkbox(radio)
    <br />
    nb-checkbox(radio2)
}

func checkbox() {
    <div class="demo-section">
        <div class="demo-h3">
            'Type: Radio'
        </div>

        show(checkbox-radio())
    </div>
    <div class="demo-section">
        <div class="demo-h3">
            'Type: Checkbox'
        </div>

        show(checkbox-check())
    </div>
    <div class="demo-section">
        <div class="demo-h3">
            'Size: S '
            <span class="demo-code demo-code_small">
                '.nb-checkbox_size_s'
            </span>
        </div>

        show(checkbox-small())
    </div>
    <div class="demo-section">
        <div class="demo-h3">
            'Type: Button'
        </div>

        show(checkbox-button())
    </div>
}
